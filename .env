# ERP Suite Infrastructure Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# ENVIRONMENT SETTINGS
# ============================================================================
COMPOSE_PROJECT_NAME=erp-suite
NODE_ENV=development
LOG_LEVEL=info

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================
NETWORK_SUBNET=172.20.0.0/16

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL
POSTGRES_DB=erp_system
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432
POSTGRES_MULTIPLE_DATABASES=erp_auth,erp_core,erp_crm,erp_hrm,erp_finance,erp_inventory,erp_projects

# MongoDB
MONGODB_ROOT_USERNAME=root
MONGODB_ROOT_PASSWORD=password
MONGODB_DATABASE=erp_analytics
MONGODB_PORT=27017

# Redis
REDIS_PASSWORD=redispassword
REDIS_PORT=6379

# Elasticsearch
ELASTIC_PASSWORD=password
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_JAVA_OPTS=-Xms512m -Xmx512m

# ============================================================================
# MESSAGE BROKER CONFIGURATION
# ============================================================================

# Kafka
KAFKA_PORT=9092
KAFKA_INTERNAL_PORT=29092
KAFKA_CLUSTER_ID=MkU3OEVBNTcwNTJENDM2Qk

# ============================================================================
# API LAYER CONFIGURATION
# ============================================================================

# GraphQL Gateway
GRAPHQL_GATEWAY_PORT=4000
GRAPHQL_ENABLE_PLAYGROUND=true
GRAPHQL_ENABLE_INTROSPECTION=true
GRAPHQL_QUERY_CACHE_TTL=300
GRAPHQL_DATALOADER_CACHE_TTL=60

# gRPC Services
GRPC_AUTH_PORT=50051
GRPC_CRM_PORT=50052
GRPC_HRM_PORT=50053
GRPC_FINANCE_PORT=50054
GRPC_INVENTORY_PORT=50055
GRPC_PROJECT_PORT=50056

# Service Registry (Consul)
CONSUL_PORT=8500
CONSUL_DNS_PORT=8600

# WebSocket Server
WEBSOCKET_PORT=3001

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_TIME=200h

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Jaeger
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268
JAEGER_GRPC_PORT=14250
JAEGER_OTLP_GRPC_PORT=4317
JAEGER_OTLP_HTTP_PORT=4318

# Kibana
KIBANA_PORT=5601

# Qdrant
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# pgAdmin
PGADMIN_PORT=8081
PGADMIN_EMAIL=admin@erp.com
PGADMIN_PASSWORD=admin

# Mongo Express
MONGO_EXPRESS_PORT=8082
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=pass

# Redis Commander
REDIS_COMMANDER_PORT=8083

# Kafka UI
KAFKA_UI_PORT=8084

# ============================================================================
# APPLICATION SERVICES (Optional - for full stack)
# ============================================================================

# Auth Service
AUTH_SERVICE_HTTP_PORT=8080
AUTH_SERVICE_GRPC_PORT=50051
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h

# Django Core
DJANGO_PORT=8000
DJANGO_SECRET_KEY=your-super-secret-django-key-change-in-production
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,django-core

# Frontend
FRONTEND_PORT=3000
NEXTAUTH_SECRET=your-super-secret-nextauth-key-change-in-production
NEXT_TELEMETRY_DISABLED=1

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# External URLs (for production)
EXTERNAL_API_URL=http://localhost:8000
EXTERNAL_GRAPHQL_URL=http://localhost:4000/graphql
EXTERNAL_WS_URL=http://localhost:3001

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable services
ENABLE_LOGGING=true
ENABLE_DEV_TOOLS=true
ENABLE_AI_SERVICES=true
ENABLE_FULL_STACK=false

# Service profiles (available: infrastructure, api-layer, logging, dev-tools, ai-services, full-stack)
COMPOSE_PROFILES=infrastructure,api-layer,logging,dev-tools