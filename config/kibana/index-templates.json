  "lifecycle_policies": [
    {
      "name": "erp-logs-policy",
      "policy": {
        "phases": {
          "hot": {
            "actions": {
              "rollover": {
                "max_size": "1GB",
                "max_age": "1d"
              }
            }
          },
          "warm": {
            "min_age": "2d",
            "actions": {
              "allocate": {
                "number_of_replicas": 0
              }
            }
          },
          "cold": {
            "min_age": "7d",
            "actions": {
              "allocate": {
                "number_of_replicas": 0
              }
            }
          },
          "delete": {
            "min_age": "30d"
          }
        }
      }
    }
  ]
}