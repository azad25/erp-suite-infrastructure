# Frontend Environment Variables
# These can be changed without rebuilding the container

# API URLs (for browser access) - All requests go through API Gateway
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:4000/graphql
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001

# CORS Configuration for localhost testing
NEXT_PUBLIC_CORS_ENABLED=true

# Server-side URLs (for container-to-container communication)
API_GATEWAY_URL=http://api-gateway:8000
AUTH_SERVICE_URL=http://auth-service:8080
GRAPHQL_GATEWAY_URL=http://graphql-gateway:4000
WEBSOCKET_SERVER_URL=http://websocket-server:3001
REDIS_URL=redis://:redispassword@redis:6379

# Feature flags
NEXT_PUBLIC_ENABLE_AI_CHATBOT=true
NEXT_PUBLIC_ENABLE_REALTIME=true

# Development settings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1