# GraphQL Gateway Environment Configuration
# This file is auto-generated from .env.example

# Server Configuration
NODE_ENV=development
PORT=4000
LOG_LEVEL=info

# Redis Configuration
REDIS_URL=redis://:redispassword@redis:6379

# PostgreSQL Configuration
POSTGRES_URL=postgresql://postgres:postgres@postgres:5432/erp_system

# gRPC Service Endpoints
GRPC_AUTH_SERVICE=auth-service:50051
GRPC_CRM_SERVICE=crm-service:50052
GRPC_HRM_SERVICE=hrm-service:50053
GRPC_FINANCE_SERVICE=finance-service:50054
GRPC_INVENTORY_SERVICE=inventory-service:50055
GRPC_PROJECT_SERVICE=project-service:50056

# GraphQL Configuration
ENABLE_PLAYGROUND=true
ENABLE_INTROSPECTION=true
QUERY_CACHE_TTL=300
DATALOADER_CACHE_TTL=60

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Performance Configuration
MAX_QUERY_COMPLEXITY=1000
MAX_QUERY_DEPTH=10
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000