# Development Environment Variables
# This file contains environment variables for development environment
# Generated from development.yaml configuration

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug
HOT_RELOAD=true

# ============================================================================
# DATABASE CONNECTIONS
# ============================================================================

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=100
DB_CONNECTION_TIMEOUT=30

# MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=root
MONGODB_PASSWORD=password
MONGODB_AUTH_SOURCE=admin
MONGODB_MAX_POOL_SIZE=100

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispassword
REDIS_MAX_CONNECTIONS=100

# Qdrant
QDRANT_HOST=localhost
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# ============================================================================
# MESSAGE BROKERS
# ============================================================================

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# ============================================================================
# SEARCH & ANALYTICS
# ============================================================================

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=password
ELASTICSEARCH_USE_SSL=false
ELASTICSEARCH_VERIFY_CERTS=false

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Prometheus
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_HOST=localhost
GRAFANA_PORT=3000
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin

# Jaeger
JAEGER_HOST=localhost
JAEGER_PORT=16686
JAEGER_GRPC_PORT=14250
JAEGER_HTTP_PORT=14268
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout

# ============================================================================
# REAL-TIME COMMUNICATION
# ============================================================================

# WebSocket
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=3001
WEBSOCKET_PATH=/socket.io/

# ============================================================================
# SECURITY
# ============================================================================

# JWT
JWT_SECRET=dev-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=3600
JWT_REFRESH_EXPIRY=604800
JWT_ALGORITHM=HS256

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080,http://localhost:8081,http://localhost:8082
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMITING_ENABLED=false
RATE_LIMIT_RPM=1000
RATE_LIMIT_BURST=100

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================

# Email
EMAIL_PROVIDER=smtp
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@erp-suite.dev

# Storage
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./storage

# AI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Payment
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_AI_ASSISTANT=true
FEATURE_REAL_TIME_NOTIFICATIONS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MULTI_LANGUAGE=false
FEATURE_MOBILE_APP=false
FEATURE_API_VERSIONING=false
FEATURE_AUDIT_LOGGING=true
FEATURE_PERFORMANCE_MONITORING=true